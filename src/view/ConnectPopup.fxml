<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Group?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="140.0" prefWidth="250.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml">
	<bottom>
      <Group BorderPane.alignment="BOTTOM_RIGHT">
         <BorderPane.margin>
            <Insets bottom="5.0" right="5.0" />
         </BorderPane.margin>
         <children>
      		<Button fx:id="connect" alignment="BOTTOM_RIGHT" layoutX="105.0" maxHeight="25.0" maxWidth="135.0" minWidth="135.0" mnemonicParsing="false" onAction="#connectToFlightGear" text="Connect to FlightGear" />
            <Label fx:id="connectErrorMsg" maxHeight="20.0" maxWidth="235.0" minHeight="20.0" minWidth="235.0" textFill="#e90000" translateY="-25.0" />
         </children>
      </Group>
	</bottom>
	<left>
		<Group BorderPane.alignment="CENTER">
			<children>
				<Label prefHeight="20.0" prefWidth="60.0" text="Port : " translateY="30.0" />
				<Label prefHeight="20.0" prefWidth="60.0" text="IP Adress : " />
			</children>
			<BorderPane.margin>
				<Insets left="10.0" />
			</BorderPane.margin>
		</Group>
	</left>
	<center>
		<Group BorderPane.alignment="CENTER">
			<children>
				<TextField fx:id="simulatorIP" maxHeight="25.0" maxWidth="170.0" prefHeight="25.0" prefWidth="170.0" />
				<TextField fx:id="simulatorPort" maxHeight="25.0" maxWidth="170.0" prefHeight="25.0" prefWidth="170.0" translateY="30.0" />
			</children>
		</Group>
	</center>
</BorderPane>
